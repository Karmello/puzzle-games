{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "globals": {
        "process": true,
        "__dirname": true,
        "jest": true
    },
    "plugins": [
        "react", "jasmine"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "no-case-declarations": 0,
        "no-console": 0,
        "no-unused-vars": 1
    }
}